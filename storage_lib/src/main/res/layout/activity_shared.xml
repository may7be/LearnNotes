<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_read_directory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            android:padding="10dp"
            android:text="1.读写public目录" />

        <TextView
            android:id="@+id/tv_directory_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tv_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_bright"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="1.1Environment写入XXX/test.txt" />

        <TextView
            android:id="@+id/tv_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_light"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="读取写入的" />

        <TextView
            android:id="@+id/tv_ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_bright"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="1.2MediaStore.api" />

        <Button
            android:id="@+id/btn_ms_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:text="1.2.1 read目录" />

        <TextView
            android:id="@+id/tv_ms_read_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />

        <Button
            android:id="@+id/btn_ms_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:text="1.2.2 write" />

        <TextView
            android:id="@+id/tv_ms_write_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />

        <Button
            android:id="@+id/btn_ms_read_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:text="1.2.2 读取自己写入的文件" />

        <TextView
            android:id="@+id/tv_ms_read_self_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />

        <Button
            android:id="@+id/btn_ms_delete_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:text="1.2.3 删除自己写入的文件" />

        <TextView
            android:id="@+id/tv_saf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_bright"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="1.2 SAF.api" />

        <TextView
            android:id="@+id/tv_saf_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_light"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="" />

    </LinearLayout>
</layout>